/**index.wxss**/
@import "../common/global.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}
.imglist{
  width:100%;
  height:200px;
}
.imglist .item{
  height:100%;
  text-align:center;
}
.imglist .item image{
  height:100%;
 
}

.imglist image{
  width:180px;
  height:180px;
}

.prolist{
  width:100%;
}
.prolist .product{
  width:50%;
  float:left;
  box-sizing:border-box;
  padding:10px 10px 10px 30px;
  margin-bottom:10px;
}
.prolist .product view{
  margin-left:10px;
  font-size:12px;
}
.prolist .product image{
  width:120px;
  height:120px;

}
.font-line{
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #999999;
  width:80%;
  border-bottom:1px solid #CDCDCD;
  text-align:center;
  height:0px;
  line-height:0px;
}
.font-line label{
  background:#fff;
  padding:2px 10px;
}